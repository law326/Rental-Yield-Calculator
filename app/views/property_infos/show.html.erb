<%- model_class = PropertyInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @property_info.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @property_info.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postcode) %>:</strong></dt>
  <dd><%= @property_info.postcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rental_period_type_id) %>:</strong></dt>
  <dd><%= @property_info.rental_period_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rent_income) %>:</strong></dt>
  <dd><%= @property_info.rent_income %></dd>
  <dt><strong><%= model_class.human_attribute_name(:property_cost) %>:</strong></dt>
  <dd><%= @property_info.property_cost %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              property_info_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_property_info_path(@property_info), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              property_info_path(@property_info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
